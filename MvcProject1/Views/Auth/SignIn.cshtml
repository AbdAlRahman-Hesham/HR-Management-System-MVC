@model SignInViewModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="SignIn" class="mx-1 mx-md-4">
    <div asp-validation-summary="All"></div>


    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input asp-for="Email" class="form-control" />
            <label class="form-label" asp-for="Email">Your Email</label>
            <span asp-validation-for="Email"></span>
        </div>
    </div>
   
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input asp-for="Password" class="form-control" />
            <label class="form-label" asp-for="Password">Password</label>
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="form-check d-flex justify-content-center mb-5">
        <input class="form-check-input me-2" asp-for="RememberMe" />
        <label class="form-check-label" asp-for="RememberMe">
        </label>
    </div>

    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
    </div>

</form>
<center>

    <div class="d-flex justify-content-center mx-1 mb-3 mb-lg-4">
        <a  asp-controller="Auth" asp-action="ForgetPassword" class="btn btn-danger btn-lg">Forget Password</a>
    
        <a asp-controller="Auth" asp-action="SignUp" class="btn btn-danger btn-lg">Sign Up</a>
        <a asp-controller="Auth" asp-action="GoogleLogin" class="btn btn-danger btn-lg">Google Login</a>
    </div>
</center>


