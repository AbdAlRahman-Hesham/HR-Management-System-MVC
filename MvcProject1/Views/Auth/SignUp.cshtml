@model SignUpViewModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="SignUp" class="mx-1 mx-md-4">
    <div asp-validation-summary="All"></div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input asp-for="UserName" class="form-control" />
            <label class="form-label" asp-for="UserName" >Your Name</label>
            <span asp-validation-for="UserName"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input asp-for="Email" class="form-control" />
            <label class="form-label" asp-for="Email">Your Email</label>
            <span asp-validation-for="Email"></span>
        </div>
    </div> 
    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-phone fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input asp-for="Phone" class="form-control" />
            <label class="form-label" asp-for="Phone">Your Phone</label>
            <span asp-validation-for="Phone"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input asp-for="Password" class="form-control" />
            <label class="form-label" asp-for="Password">Password</label>
            <span asp-validation-for="Password"></span>
        </div>
    </div>

    <div class="d-flex flex-row align-items-center mb-4">
        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
        <div class="form-outline flex-fill mb-0">
            <input asp-for="ConfirmPassword" class="form-control" />
            <label class="form-label" asp-for="ConfirmPassword">Repeat your password</label>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <div class="form-check d-flex justify-content-center mb-5">
        <input class="form-check-input me-2" asp-for="IsAgree" />
        <label class="form-check-label" asp-for="IsAgree">
            I agree all statements in <a href="#!">Terms of service</a>
        </label>
    </div>

    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
        <button type="submit" class="btn btn-primary btn-lg">Register</button>
        <a asp-controller="Auth" asp-action="GoogleLogin" class="btn btn-danger btn-lg">Google Login</a>

    </div>

</form>
