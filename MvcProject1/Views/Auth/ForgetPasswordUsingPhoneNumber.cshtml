@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="card-body">
    <p class="text-center mb-4">
        Enter your email address, and we will send you sms with link to reset your password.
    </p>
    <form asp-action="ForgetPasswordUsingPhoneNumber">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="Email" class="form-label">Email Address</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary btn-lg w-100">Send Reset Link</button>
        </div>
    </form>
</div>
<div class="card-footer text-center">
    <p class="mb-1">Or, use your email:</p>
    <a asp-action="ForgetPassword" class="btn btn-danger btn-lg w-100">Send Email</a>
</div>
