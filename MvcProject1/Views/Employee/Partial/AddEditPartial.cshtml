@model EmployeeViewModel


@{
 
    var departments = ViewData["Department"] as IEnumerable<Department>;
    var depOptions = new SelectList(departments, nameof(Department.Id),
    nameof(Department.Name));
}


<div class="container-sm">
<div class="form-group my-2">
    <label asp-for=FirstName></label>
    <input class="form-control"
           asp-for=FirstName>
    <span asp-validation-for="FirstName" class="text-danger"></span>
</div>
<div class="form-group my-2">
    <label asp-for=LastName></label>
    <input class="form-control"
           asp-for=LastName>
    <span asp-validation-for="LastName" class="text-danger"></span>
</div>
<div class="form-group my-2">
    <label asp-for=HireDate></label>
    <input class="form-control"
           asp-for=HireDate>
    <span asp-validation-for="HireDate" class="text-danger"></span>
</div>
<div class="form-group my-2">
    <label asp-for=Salary></label>
    <input class="form-control"
           asp-for=Salary>
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>
<div class="form-group my-2">
    <label asp-for=Age></label>
    <input class="form-control"
           asp-for=Age>
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group my-2">
    <label asp-for=Email></label>
    <input class="form-control"
           asp-for=Email>
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group my-2">
    <label asp-for=PhoneNumber></label>
    <input class="form-control"
           asp-for=PhoneNumber>
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="form-group my-2">
    <label asp-for=Address></label>
    <input class="form-control"
           asp-for=Address>
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group my-2">
    <label asp-for=IsActive></label>
    <input class="form-check"
           asp-for=IsActive>
</div>
<div class="form-group my-2">
    <label asp-for=Department></label>
    <select asp-items="depOptions" asp-for="DepartmentId" class="form-select" style="width:200px">
    <option value="@null">-- Department --</option>
</select>
</div>
<div class="form-group my-2">
    <label asp-for=Department></label>
    <input asp-items="depOptions" asp-for="Image" class="form-control">
</div>


</div>

